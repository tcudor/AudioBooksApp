@model IEnumerable<Book>

@{
    ViewData["Title"] = "List of Books";
}

<div class="row">
    @foreach (var item in Model)
    {     
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 480px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Title                                   
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageUrl" alt="@item.Title" style="width:100%;height:100%">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Length: </b>@item.Length</p>
                            <p class="card-text"><b>Price: </b>@item.Price</p>
                            <p class="card-text"><b>Publication Date: </b><br>@item.PublicationDate.ToString("dd MMM yyyy")</p>
                            <p class="card-text"><b>Category: </b>@item.Category</p>
                            <p class="card-text"><b>Author: </b>@(item.Author != null ? item.Author.Name : "Unknown")</p>
                            <p class="card-text"><b>Publisher: </b>@(item.Publisher != null ? item.Publisher.Name : "Unknown")</p>

                            <p class="card-text"><b>Audio File Path: </b><a href=@item.AudioFilePath download=@item.AudioFilePath>Download</a></p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <div class="card-text row">
                                <div class="col-5">
                                    <a class="btn btn-outline-primary float-right" asp-controller="Books" asp-action="Details" asp-route-id="@item.Id"> <i class="bi bi-eye-fill"></i> Show Details</a>
                                </div>
                                <div class="col-7 text-end">
                                    <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemShoppingCart" asp-route-id="@item.Id"><i class="bi bi-cart-plus"></i> Add to Cart(Price @item.Price.ToString() EUR)</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

