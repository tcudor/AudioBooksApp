@model AudioBooksApp.Models.Book

@{
    ViewData["Title"] = "Book details";
}
<br />
<br />
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" width="100%" alt="@Model.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Author: </b>@Model.Author.Name
                        </p>
                        <p class="card-text">
                            <b>Publisher: </b>@Model.Publisher.Name

                        </p>
                        <p class="card-text"><b>Category: </b>@Model.Category</p>
                        <p class="card-text"><b>Publication Date: </b>@Model.PublicationDate.ToString("dd MMM yyyy")</p>
                        <p class="card-text"><b>Price: </b>@Model.Price.ToString() EUR</p>
                        <p class="card-text"><b>Length: </b>@Model.Length</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white float-left" asp-controller="Orders" asp-action="AddItemShoppingCart" asp-route-id="@Model.Id">
                                <i class="bi bi-cart-plus"></i>
                                Add to Cart(Price @Model.Price.ToString() EUR)
                           </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
